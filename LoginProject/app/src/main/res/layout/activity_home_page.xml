<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/groungback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".HomePage">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/indiatoday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
android:layout_margin="2dp"
            android:background="@drawable/indiatoday"></ImageView>

        <ImageView
            android:id="@+id/dainik"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"

            android:background="@drawable/dainik"></ImageView>

    <ImageView
        android:id="@+id/parichay"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_margin="2dp"
        android:background="@drawable/parichaytimes"

        ></ImageView>

    <ImageView
            android:id="@+id/aajtakimage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/aajtak1"

            ></ImageView>

        <ImageView
            android:id="@+id/amarujala"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/amarujala"
            android:padding="20dp"

            ></ImageView>

        <ImageView
            android:id="@+id/punjabkesari"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:background="@drawable/punjabkesari"
            android:padding="20dp"

            ></ImageView>

    <ImageView
        android:id="@+id/ndtv"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="2dp"
        android:background="@drawable/ndtv"

        ></ImageView>

    <ImageView
            android:id="@+id/dainikbhasker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/dainikbhasker"

            ></ImageView>


        <ImageView
            android:id="@+id/theindianexpress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/theindianexpress"
            android:padding="10dp"></ImageView>


    <ImageView
        android:id="@+id/telegraph"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/telegraph"
        android:padding="10dp"></ImageView>

    <ImageView
            android:id="@+id/timesid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"


            android:background="@drawable/timesnow"></ImageView>

    <ImageView
        android:id="@+id/aajsmajid"
        android:layout_width="match_parent"
        android:layout_height="45dp"
       android:layout_margin="2dp"
        android:background="@drawable/aajsamaj">

    </ImageView>
    <ImageView
        android:id="@+id/wion"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/wion">

    </ImageView>

    <ImageView
    android:id="@+id/indiaahead"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_margin="2dp"
        android:background="@drawable/indiaahead"></ImageView>


    <ImageView
        android:id="@+id/republictv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/republic">



    </ImageView>
    <ImageView
        android:id="@+id/bloombergimg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/bloom1">




    </ImageView>
    <ImageView
        android:id="@+id/skynews"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/skynews"/>
    <ImageView
        android:id="@+id/news24"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/news24"/>
    <ImageView
        android:id="@+id/newsnation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/newsnation"/>

    <ImageView
        android:id="@+id/geo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/geonews"/>
    <ImageView
        android:id="@+id/euro"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/euronews"/>




</LinearLayout>
</ScrollView>

</LinearLayout>